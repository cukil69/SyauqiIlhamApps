<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarPrimary" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/varelaround_regular</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTextAppereance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextName">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="TextNameCollapsed">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/varelaround_regular</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">48dp</item>
        <item name="android:paddingLeft">48dp</item>
        <item name="android:fontFamily">@font/varelaround_regular</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/bg_button_primary</item>
    </style>

    <style name="Button.White">
        <item name="android:background">@drawable/bg_button_white</item>
    </style>

    <style name="Button.Accent">
        <item name="android:background">@drawable/bg_button_accent</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
